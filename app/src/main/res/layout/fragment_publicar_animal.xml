<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativePublicarAnimal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.PublicarAnimalFragment"
    android:gravity="center">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="10dp"
        >

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="60dp"
                android:orientation="vertical">


                <Spinner
                    android:id="@+id/spinnerTipoAnimal"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginStart="30dp">

                </Spinner>

                <EditText
                    android:id="@+id/nombreAnimal"
                    android:layout_width="350dp"
                    android:layout_height="40dp"
                    android:background="@drawable/edittext_design"
                    android:fontFamily="@font/dmsansregular"
                    android:hint="Nombre del animal"
                    android:layout_gravity="center"
                    android:elevation="5dp"
                    android:inputType="textMultiLine"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textColor="#000000"
                    android:textColorHint="#9FA3AC"
                    android:textSize="14sp"
                    android:layout_marginTop="20dp">
                </EditText>



                <Spinner
                    android:id="@+id/spinnerSexoAnimal"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginStart="30dp">

                </Spinner>


                <CheckBox
                    android:id="@+id/transitoCheckBox"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:fontFamily="@font/dmsansregular"
                    android:text="Transito urgente"
                    android:elevation="5dp"
                    android:inputType="text"
                    android:paddingStart="5dp"
                    android:textColor="#000000"
                    android:textColorHint="#9FA3AC"
                    android:textSize="14sp"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="30dp"
                    android:paddingLeft="5dp"
                    android:layout_marginStart="30dp"
                    tools:ignore="RtlSymmetry">
                </CheckBox>

                <Spinner
                    android:id="@+id/spinnerAct"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginStart="30dp">

                </Spinner>

                <EditText
                    android:id="@+id/descripcionAnimal"
                    android:layout_width="350dp"
                    android:layout_height="40dp"
                    android:background="@drawable/edittext_design"
                    android:fontFamily="@font/dmsansregular"
                    android:hint="Descripcion"
                    android:layout_gravity="center"
                    android:elevation="5dp"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textColor="#000000"
                    android:textColorHint="#9FA3AC"
                    android:textSize="14sp"
                    android:layout_marginTop="20dp">
                </EditText>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:id="@+id/imagen3"
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:background="#fff"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp">
                    </ImageView>

                    <ImageView
                        android:id="@+id/imagen4"
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:background="#fff"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp">
                    </ImageView>

                </LinearLayout>



                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/botonContinuar"
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Continuar"
                    android:textColor="#fff"
                    android:background="@drawable/button_design"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="25dp"
                    android:layout_gravity="center"/>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>


    </androidx.cardview.widget.CardView>


</RelativeLayout>

