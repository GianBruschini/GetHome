<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.AnimalDetalleActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.viewpager.widget.ViewPager
            android:id="@+id/imagenAnimalViewPager"
            android:layout_width="match_parent"
            android:layout_height="290dp"
            android:scaleType="centerCrop"
            android:src="@drawable/dog" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="15dp"
            android:onClick="backArrowButton"
            android:padding="10dp"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/indicator"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="210dp"
            app:tabBackground="@drawable/indicator_selector"
            app:tabGravity="center"
            app:tabIndicatorHeight="0dp">

        </com.google.android.material.tabs.TabLayout>

    </RelativeLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewDatos"
        android:layout_width="340dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="230dp"
        android:elevation="10dp"
        app:cardCornerRadius="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/nombreAnimalTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/opensans_bold"
                android:padding="5dp"
                android:text="Firulais"
                android:textColor="#D9000000"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/transitoUrgenteTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nombreAnimalTxt"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"
                android:text="Con transito urgente"
                android:textColor="#000000"
                android:textSize="15sp"

                />


            <ImageView
                android:id="@+id/sexoAnimalImage"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginRight="40dp"
                android:src="@drawable/male"
                android:text="Macho" />

            <TextView
                android:id="@+id/edadAnimalTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sexoAnimalImage"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:text="2 aÃ±os"
                android:textColor="#000000"
                android:textSize="15sp"


                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/transitoUrgenteTxt"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_bold"
                    android:src="@drawable/ic_baseline_location_on_24"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/distanceTextCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="Distance"
                    android:textColor="#000000"
                    android:textSize="11sp" />
            </LinearLayout>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/datosUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardViewDatos"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="40dp"
            android:src="@drawable/ic_perfil">

        </de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/nameOwner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/dmsansbold"
            android:text="Nombre"
            android:textSize="15sp" />


    </LinearLayout>

    <TextView
        android:id="@+id/fechaPublicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardViewDatos"
        android:layout_alignRight="@id/cardViewDatos"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="May 25, 2019"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/descripcionAnimalTxt"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/fechaPublicacion"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="center"
        android:scrollbars="vertical"
        android:text="@string/text_to_test"
        android:textSize="15sp">

    </TextView>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonLike"
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:background="@drawable/button_design"
            android:elevation="10dp"
            android:fontFamily="@font/montserrat_medium"
            android:onClick="goToContactInfo"
            android:text="Adoptar"
            android:textColor="#fff"
            android:visibility="visible"

            tools:ignore="UsingOnClickInXml" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardAddToFav"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="30dp"
            android:background="#473D3D"
            android:elevation="20dp"
            app:cardCornerRadius="20dp">

            <ToggleButton
                android:id="@+id/addToFav"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/favourite_icon_selector"
                android:textOff=""
                android:textOn=""

                />


        </androidx.cardview.widget.CardView>

    </LinearLayout>


</RelativeLayout>