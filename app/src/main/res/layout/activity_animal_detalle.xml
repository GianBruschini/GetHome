<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.AnimalDetalleActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.viewpager.widget.ViewPager
            android:id="@+id/imagenAnimalViewPager"
            android:layout_width="match_parent"
            android:layout_height="290dp"
            android:src="@drawable/dog"
            android:scaleType="centerCrop"
            >
        </androidx.viewpager.widget.ViewPager>

        <ImageView
            android:onClick="backArrowButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:layout_margin="15dp"
            android:src="@drawable/ic_baseline_arrow_back_24">
        </ImageView>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/indicator"
            android:layout_width="match_parent"
            app:tabBackground="@drawable/indicator_selector"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="210dp"
            app:tabIndicatorHeight="0dp"
            app:tabGravity="center">

        </com.google.android.material.tabs.TabLayout>

    </RelativeLayout>



    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewDatos"
        android:layout_width="340dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="230dp"
        app:cardCornerRadius="30dp"
        android:elevation="10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <TextView
                    android:id="@+id/nombreAnimalTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/opensans_bold"
                    android:padding="5dp"
                    android:textColor="#D9000000"
                    android:textSize="20sp"
                    android:text="Firulais"
                    android:layout_marginStart="20dp">
                </TextView>


            <TextView
                android:id="@+id/transitoUrgenteTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nombreAnimalTxt"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="25dp"
                android:text="Con transito urgente"

                >
            </TextView>



            <ImageView
                android:id="@+id/sexoAnimalImage"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/male"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginRight="40dp"
                android:text="Macho"
                android:layout_alignParentEnd="true">
            </ImageView>

                <TextView
                    android:id="@+id/edadAnimalTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:text="2 aÃ±os"
                    android:gravity="center"
                    android:layout_below="@id/sexoAnimalImage"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="15dp"


                    >
                </TextView>

                <LinearLayout
                    android:layout_below="@id/transitoUrgenteTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    >
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_bold"
                        android:src="@drawable/ic_baseline_location_on_24"
                        android:textSize="20sp"
                        />

                    <TextView
                        android:id="@+id/distanceTextCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:text="Distance"
                        android:textColor="#000000"
                        android:padding="4dp"
                        >
                    </TextView>
                </LinearLayout>






        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/datosUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardViewDatos"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_perfil"
            android:layout_marginLeft="40dp"
            >

        </de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/nameOwner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:text="Nombre"
            android:fontFamily="@font/dmsansbold"
            >
        </TextView>



    </LinearLayout>

    <TextView
        android:id="@+id/fechaPublicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_below="@id/cardViewDatos"
        android:layout_alignRight="@id/cardViewDatos"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:text="May 25, 2019"
        android:fontFamily="@font/montserrat_medium"
        >
    </TextView>

    <LinearLayout
        android:id="@+id/linearMasDatosAnimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/datosUsuario"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="45dp">



        <TextView
            android:id="@+id/descripcionAnimalTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/datosUsuario"
            android:maxLines="6"
            android:layout_marginTop="20dp"
            android:textSize="15sp"
            android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
            android:fontFamily="@font/montserrat_medium"
            android:layout_marginRight="20dp"
            >

        </TextView>



    </LinearLayout>




        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_below="@id/linearMasDatosAnimal"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"

            >

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonLike"
                android:onClick="goToContactInfo"
                android:layout_width="230dp"
                android:elevation="10dp"
                android:layout_height="wrap_content"
                android:text="Adoptar"
                android:visibility="visible"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="#fff"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="30dp"
                android:background="@drawable/button_design"

                >
            </androidx.appcompat.widget.AppCompatButton>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardAddToFav"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#473D3D"
                app:cardCornerRadius="20dp"
                android:elevation="20dp"
                android:layout_toEndOf="@id/buttonLike"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="10dp">

                <ImageView
                    android:id="@+id/addToFav"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_baseline_favorite_24"
                    android:layout_gravity="center"
                    android:onClick="likeAnimal"
                    >

                </ImageView>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>







</RelativeLayout>