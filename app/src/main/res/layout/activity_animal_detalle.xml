<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.AnimalDetalleActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.viewpager.widget.ViewPager
            android:id="@+id/imagenAnimalViewPager"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/dog"
            android:scaleType="centerCrop"
            >
        </androidx.viewpager.widget.ViewPager>

        <ImageView
            android:onClick="backArrowButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:layout_margin="15dp"
            android:src="@drawable/ic_baseline_arrow_back_24">
        </ImageView>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/indicator"
            android:layout_width="match_parent"
            app:tabBackground="@drawable/indicator_selector"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="170dp"
            app:tabIndicatorHeight="0dp"
            app:tabGravity="center">

        </com.google.android.material.tabs.TabLayout>

    </RelativeLayout>



    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewDatos"
        android:layout_width="340dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="190dp"
        app:cardCornerRadius="40dp"
        android:elevation="10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearNombre">

                <TextView
                    android:id="@+id/nombreAnimal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:padding="10dp"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:text="Nombre del animal"
                    >
                </TextView>

                <TextView
                    android:id="@+id/sexoAnimal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="98dp"
                    android:padding="10dp"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:text="Macho"
                    >
                </TextView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linearNombre"
                android:layout_marginLeft="30dp"
                android:orientation="horizontal"
                android:id="@+id/linearEdad">




                <TextView
                    android:id="@+id/edadAnimal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:text="2 aÃ±os"

                    android:layout_marginTop="1dp"

                    >
                </TextView>

            </LinearLayout>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/linearEdad"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_bold"
                    android:src="@drawable/ic_baseline_location_on_24"
                    android:textSize="20sp"
                    />

                <TextView
                    android:id="@+id/distanceTextCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:text="Distance"
                    android:textColor="#000000"
                    android:padding="4dp"

                    >
                </TextView>


            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/datosUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardViewDatos"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_perfil"
            android:layout_marginLeft="40dp"
            >

        </de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/nameOwner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:textSize="14sp"
            android:text="Nombre"
            android:fontFamily="@font/grandstander_semibold"
            >
        </TextView>

        <TextView
            android:id="@+id/fechaPublicacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:padding="10dp"
            android:textSize="14sp"
            android:text="May 25, 2019"
            android:fontFamily="@font/montserrat_medium"
            >
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearMasDatosAnimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/datosUsuario"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="45dp">

        <TextView
            android:id="@+id/transitoUrgente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="15sp"
            android:text="Transito urgente: NO"

            >
        </TextView>

        <TextView
            android:id="@+id/descripcionAnimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/datosUsuario"
            android:maxLines="6"
            android:layout_marginTop="20dp"
            android:textSize="15sp"
            android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
            android:fontFamily="@font/montserrat_medium"
            android:layout_marginRight="20dp"
            >

        </TextView>



    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/linearMasDatosAnimal"
        android:layout_marginTop="10dp"
        android:background="@drawable/card_rounded_design"
        app:cardPreventCornerOverlap="true"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"

            >

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonLike"
                android:onClick="likeAnimal"
                android:layout_width="230dp"
                android:elevation="10dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Me gusta"
                android:visibility="visible"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="#fff"
                android:background="@drawable/button_design"

                >
            </androidx.appcompat.widget.AppCompatButton>

        </RelativeLayout>



    </androidx.cardview.widget.CardView>



</RelativeLayout>