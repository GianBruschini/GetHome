<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="-5dp"
    >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView1"
            android:layout_width="170dp"

            android:layout_height="190dp"
            app:cardElevation="10dp"
            app:cardCornerRadius="10dp"
            android:layout_marginBottom="25dp"
            android:layout_marginStart="21dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/fotoAnimalImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/dog">
                </ImageView>

                <ImageView
                    android:id="@+id/esTransitoUrgente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="130dp"
                    android:layout_marginTop="10dp"
                    android:visibility="invisible"
                    android:src="@drawable/ic_senal_de_advertencia" />



            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="190dp"
            android:layout_height="160dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="15dp"
            android:layout_marginStart="180dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/cardView1"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/nombreAnimalText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Nombre"
                    android:textColor="#000000"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="15dp"
                    android:padding="10dp"
                    android:textStyle="bold"

                    >
                </TextView>



                <TextView
                    android:id="@+id/edadText"
                    android:layout_below="@id/nombreAnimalText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:text="Edad"
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:layout_marginStart="15dp">
                </TextView>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/edadText"
                    android:layout_marginStart="18dp">


                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_bold"
                        android:src="@drawable/ic_baseline_location_on_24"
                        android:textSize="20sp"
                        android:layout_marginStart="4dp"

                        />

                    <TextView
                        android:id="@+id/distanceText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:text="Distance"
                        android:textColor="#000000"
                        android:padding="4dp"

                        >
                    </TextView>

                </LinearLayout>

                <ImageView
                    android:id="@+id/iconGenre"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/male">

                </ImageView>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>


    </FrameLayout>






</RelativeLayout>